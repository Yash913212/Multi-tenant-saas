# Root environment variables for docker-compose and local development

# Database
DB_HOST=database
DB_PORT=5432
DB_NAME=saas_db
DB_USER=postgres
DB_PASSWORD=postgres
DATABASE_URL=postgres://postgres:postgres@database:5432/saas_db

# JWT
JWT_SECRET=dev_jwt_secret_key_min_32_chars
JWT_EXPIRES_IN=24h

# Server
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://frontend:3000

# Optional: Email configuration
EMAIL_HOST=
EMAIL_PORT=
EMAIL_USER=
EMAIL_PASSWORD=

# Seed defaults
DEFAULT_SUPERADMIN_EMAIL=superadmin@system.com
DEFAULT_SUPERADMIN_PASSWORD=Admin@123

# Frontend build
VITE_API_BASE_URL=http://backend:5000/api
REACT_APP_API_URL=http://backend:5000/api
