{
    "name": "multi-tenant-saas-backend",
    "version": "1.0.0",
    "description": "Backend API for multi-tenant SaaS platform",
    "main": "src/server.js",
    "type": "module",
    "scripts": {
        "dev": "nodemon src/server.js",
        "start": "node src/server.js",
        "migrate": "knex migrate:latest",
        "rollback": "knex migrate:rollback",
        "seed": "knex seed:run",
        "db:reset": "npm run rollback -- --all && npm run migrate && npm run seed"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "helmet": "^7.1.0",
        "joi": "^17.11.0",
        "jsonwebtoken": "^9.0.2",
        "knex": "^3.1.0",
        "morgan": "^1.10.0",
        "pg": "^8.11.5",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "nodemon": "^3.1.4"
    }
}